<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditTextPreference
        android:title="@string/pref_location_label"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true" />

    <CheckBoxPreference
        android:title="Facebook Events"
        android:defaultValue="false"
        android:summary="Select to enable facebook sync"
        android:key="facebookPref" />


    <CheckBoxPreference
        android:title="Google Calendar"
        android:defaultValue="false"
        android:summary="Select to enable google calendar"
        android:key="gmailPref" />

    <CheckBoxPreference
        android:title="Outlook Calendar"
        android:defaultValue="false"
        android:summary="Select to enable outlook calendar"
        android:key="outlookPref" />

    <CheckBoxPreference
        android:title="OneNote"
        android:defaultValue="false"
        android:summary="Select to enable OneNote"
        android:key="onenotePref" />

    <CheckBoxPreference
        android:title="EverNote"
        android:defaultValue="false"
        android:summary="Select to enable EverNote"
        android:key="evernotePref" />
</PreferenceScreen>
